<div class="container">
  <h3>Create a New Note</h3>
  <form action='/new' method='post'>
    <h5>Title</h5>
    <input type='text' name='title'>
    <h5>Description</h5>
    <textarea name='content'></textarea>
    <input type='submit'>
  </form>
</div>

<% if @notes %>
  <%= erb :_notes %>
<% end %>